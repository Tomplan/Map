# Supabase Database Configuration
# Copy this file to .env and fill in your actual values

# Database Connection
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-actual-password
SUPABASE_DB_SSL=true

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=12

# Cloud Storage (Optional)
BACKUP_CLOUD_PROVIDER=google-drive  # Options: google-drive, dropbox, null

# Google Drive Integration
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-google-drive-refresh-token

# Dropbox Integration  
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token

# Notifications (Optional)
BACKUP_EMAIL_ENABLED=false
BACKUP_EMAIL_TO=your-email@example.com
BACKUP_EMAIL_FROM=backup-system@localhost

BACKUP_SLACK_ENABLED=false
BACKUP_SLACK_WEBHOOK=your-slack-webhook-url

# Logging
BACKUP_LOG_LEVEL=info  # Options: error, warn, info, debug

# Security
# Generate a secure random string for production
BACKUP_ENCRYPTION_KEY=your-32-character-encryption-key-here